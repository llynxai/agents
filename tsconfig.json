{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "outDir": "dist",
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "lib": ["es2021", "dom"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
